<style>
  .gear-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    margin-block: var(--space-10);
    color: var(--color-accent-secondary);
  }

  .gear-divider--sm {
    margin-block: var(--space-6);
  }

  .gear-divider--lg {
    margin-block: var(--space-16);
  }

  .gear-divider__line {
    flex: 1;
    height: 1px;
    max-width: 200px;
  }

  .gear-divider__line--left {
    background: linear-gradient(to right, transparent, currentColor);
  }

  .gear-divider__line--right {
    background: linear-gradient(to left, transparent, currentColor);
  }

  .gear-divider__gears {
    display: flex;
    align-items: center;
    gap: -2px;
  }

  .gear-divider__gear {
    flex-shrink: 0;
  }

  .gear-divider__gear--small {
    width: 1rem;
    height: 1rem;
    opacity: 0.6;
  }

  .gear-divider__gear--large {
    width: 1.5rem;
    height: 1.5rem;
    margin-inline: -2px;
  }

  .gear-divider--sm .gear-divider__gear--small {
    width: 0.75rem;
    height: 0.75rem;
  }

  .gear-divider--sm .gear-divider__gear--large {
    width: 1.125rem;
    height: 1.125rem;
  }

  .gear-divider--lg .gear-divider__gear--small {
    width: 1.25rem;
    height: 1.25rem;
  }

  .gear-divider--lg .gear-divider__gear--large {
    width: 2rem;
    height: 2rem;
  }

  /* Animation */
  .gear-divider--animate .gear-divider__gear--large {
    animation: gear-spin 20s linear infinite;
  }

  .gear-divider--animate .gear-divider__gear--small:first-child {
    animation: gear-spin 15s linear infinite reverse;
  }

  .gear-divider--animate .gear-divider__gear--small:last-child {
    animation: gear-spin 15s linear infinite reverse;
  }

  @keyframes gear-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
