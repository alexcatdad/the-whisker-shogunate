---
/**
 * WhiskerPunkGraphic.astro
 * An intricate animated illustration celebrating Whisker-Punk technology
 * Features interlocking gears, steam pipes, kinetic paths, and visible mechanisms
 * All machinery is beautiful, ornate, and proudly displayed
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["whiskerpunk-graphic", className]} aria-hidden="true">
  <svg viewBox="0 0 700 280" class="whiskerpunk-graphic__svg" preserveAspectRatio="xMidYMid slice">
    <defs>
      <!-- Metal gradients -->
      <linearGradient id="brassGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="var(--color-accent-primary)" />
        <stop offset="50%" stop-color="var(--color-accent-highlight)" />
        <stop offset="100%" stop-color="var(--color-accent-tertiary)" />
      </linearGradient>

      <linearGradient id="copperGradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="var(--color-accent-highlight)" />
        <stop offset="100%" stop-color="var(--color-accent-primary)" />
      </linearGradient>

      <linearGradient id="bronzeGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="var(--color-accent-tertiary)" />
        <stop offset="50%" stop-color="var(--color-accent-primary)" />
        <stop offset="100%" stop-color="var(--color-accent-tertiary)" />
      </linearGradient>

      <linearGradient id="pipeGradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="var(--color-accent-primary)" stop-opacity="0.9" />
        <stop offset="30%" stop-color="var(--color-accent-highlight)" stop-opacity="0.95" />
        <stop offset="70%" stop-color="var(--color-accent-primary)" stop-opacity="0.9" />
        <stop offset="100%" stop-color="var(--color-accent-tertiary)" stop-opacity="0.85" />
      </linearGradient>

      <radialGradient id="gearCenter" cx="50%" cy="50%" r="50%">
        <stop offset="0%" stop-color="var(--color-accent-highlight)" />
        <stop offset="60%" stop-color="var(--color-accent-primary)" />
        <stop offset="100%" stop-color="var(--color-accent-tertiary)" />
      </radialGradient>

      <linearGradient id="steamGradient" x1="0%" y1="100%" x2="0%" y2="0%">
        <stop offset="0%" stop-color="var(--color-text-primary)" stop-opacity="0.15" />
        <stop offset="100%" stop-color="var(--color-text-primary)" stop-opacity="0" />
      </linearGradient>

      <linearGradient id="energyFlow" x1="0%" y1="50%" x2="100%" y2="50%">
        <stop offset="0%" stop-color="var(--color-accent-secondary)" stop-opacity="0" />
        <stop offset="50%" stop-color="var(--color-accent-secondary)" stop-opacity="0.8" />
        <stop offset="100%" stop-color="var(--color-accent-secondary)" stop-opacity="0" />
      </linearGradient>

      <!-- Filters -->
      <filter id="metalShine" x="-10%" y="-10%" width="120%" height="120%">
        <feGaussianBlur in="SourceAlpha" stdDeviation="2" result="blur" />
        <feOffset in="blur" dx="1" dy="1" result="shadow" />
        <feComposite in="SourceGraphic" in2="shadow" operator="over" />
      </filter>

      <filter id="gearGlow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="2" result="glow" />
        <feMerge>
          <feMergeNode in="glow" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>

      <!-- Gear tooth pattern -->
      <symbol id="gearLarge" viewBox="-50 -50 100 100">
        <circle cx="0" cy="0" r="45" fill="url(#brassGradient)" />
        <circle cx="0" cy="0" r="35" fill="var(--color-bg-secondary)" />
        <circle cx="0" cy="0" r="28" fill="url(#gearCenter)" />
        <circle cx="0" cy="0" r="8" fill="var(--color-accent-tertiary)" />
        <!-- Gear teeth -->
        <g fill="url(#brassGradient)">
          <rect x="-5" y="-50" width="10" height="12" rx="1" />
          <rect x="-5" y="38" width="10" height="12" rx="1" />
          <rect x="-50" y="-5" width="12" height="10" rx="1" />
          <rect x="38" y="-5" width="12" height="10" rx="1" />
          <rect x="26" y="-40" width="10" height="12" rx="1" transform="rotate(45 31 -34)" />
          <rect x="-36" y="-40" width="10" height="12" rx="1" transform="rotate(-45 -31 -34)" />
          <rect x="26" y="28" width="10" height="12" rx="1" transform="rotate(-45 31 34)" />
          <rect x="-36" y="28" width="10" height="12" rx="1" transform="rotate(45 -31 34)" />
        </g>
        <!-- Decorative spokes -->
        <g stroke="var(--color-accent-tertiary)" stroke-width="2" opacity="0.6">
          <line x1="-25" y1="0" x2="-12" y2="0" />
          <line x1="12" y1="0" x2="25" y2="0" />
          <line x1="0" y1="-25" x2="0" y2="-12" />
          <line x1="0" y1="12" x2="0" y2="25" />
        </g>
      </symbol>

      <symbol id="gearMedium" viewBox="-35 -35 70 70">
        <circle cx="0" cy="0" r="32" fill="url(#copperGradient)" />
        <circle cx="0" cy="0" r="24" fill="var(--color-bg-secondary)" />
        <circle cx="0" cy="0" r="18" fill="url(#gearCenter)" />
        <circle cx="0" cy="0" r="5" fill="var(--color-accent-tertiary)" />
        <!-- Gear teeth -->
        <g fill="url(#copperGradient)">
          <rect x="-4" y="-35" width="8" height="8" rx="1" />
          <rect x="-4" y="27" width="8" height="8" rx="1" />
          <rect x="-35" y="-4" width="8" height="8" rx="1" />
          <rect x="27" y="-4" width="8" height="8" rx="1" />
          <rect x="17" y="-28" width="8" height="8" rx="1" transform="rotate(45 21 -24)" />
          <rect x="-25" y="-28" width="8" height="8" rx="1" transform="rotate(-45 -21 -24)" />
          <rect x="17" y="20" width="8" height="8" rx="1" transform="rotate(-45 21 24)" />
          <rect x="-25" y="20" width="8" height="8" rx="1" transform="rotate(45 -21 24)" />
        </g>
      </symbol>

      <symbol id="gearSmall" viewBox="-20 -20 40 40">
        <circle cx="0" cy="0" r="18" fill="url(#bronzeGradient)" />
        <circle cx="0" cy="0" r="12" fill="var(--color-bg-secondary)" />
        <circle cx="0" cy="0" r="8" fill="url(#gearCenter)" />
        <circle cx="0" cy="0" r="3" fill="var(--color-accent-tertiary)" />
        <!-- Gear teeth -->
        <g fill="url(#bronzeGradient)">
          <rect x="-3" y="-20" width="6" height="5" rx="1" />
          <rect x="-3" y="15" width="6" height="5" rx="1" />
          <rect x="-20" y="-3" width="5" height="6" rx="1" />
          <rect x="15" y="-3" width="5" height="6" rx="1" />
        </g>
      </symbol>
    </defs>

    <!-- Background mechanism texture -->
    <rect width="100%" height="100%" fill="var(--color-bg-tertiary)" opacity="0.5" />

    <!-- Blueprint grid pattern -->
    <g class="blueprint-grid" opacity="0.05">
      <pattern id="gridPattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
        <path d="M20 0 L0 0 0 20" fill="none" stroke="var(--color-accent-primary)" stroke-width="0.5" />
      </pattern>
      <rect width="100%" height="100%" fill="url(#gridPattern)" />
    </g>

    <!-- Main gear assembly (left side) -->
    <g class="gear-assembly gear-assembly--left" filter="url(#metalShine)">
      <!-- Large main gear -->
      <g class="gear gear--main" transform="translate(120, 140)">
        <use href="#gearLarge" width="100" height="100" x="-50" y="-50" />
      </g>

      <!-- Medium interlocking gears -->
      <g class="gear gear--1" transform="translate(60, 80)">
        <use href="#gearMedium" width="60" height="60" x="-30" y="-30" />
      </g>

      <g class="gear gear--2" transform="translate(175, 85)">
        <use href="#gearMedium" width="60" height="60" x="-30" y="-30" />
      </g>

      <g class="gear gear--3" transform="translate(65, 200)">
        <use href="#gearMedium" width="60" height="60" x="-30" y="-30" />
      </g>

      <!-- Small accent gears -->
      <g class="gear gear--small-1" transform="translate(30, 130)">
        <use href="#gearSmall" width="35" height="35" x="-17.5" y="-17.5" />
      </g>

      <g class="gear gear--small-2" transform="translate(190, 155)">
        <use href="#gearSmall" width="35" height="35" x="-17.5" y="-17.5" />
      </g>
    </g>

    <!-- Central power distribution hub -->
    <g class="power-hub" transform="translate(350, 140)">
      <!-- Main housing -->
      <rect x="-40" y="-60" width="80" height="120" rx="8" fill="url(#pipeGradient)" />
      <rect x="-35" y="-55" width="70" height="110" rx="6" fill="var(--color-bg-secondary)" opacity="0.5" />

      <!-- Display panel -->
      <rect x="-25" y="-45" width="50" height="30" rx="4" fill="var(--color-bg-primary)" opacity="0.8" />
      <!-- Energy level indicators -->
      <g class="energy-bars">
        <rect class="energy-bar energy-bar--1" x="-20" y="-40" width="8" height="20" rx="2"
              fill="var(--color-accent-secondary)" opacity="0.8" />
        <rect class="energy-bar energy-bar--2" x="-8" y="-40" width="8" height="20" rx="2"
              fill="var(--color-accent-secondary)" opacity="0.6" />
        <rect class="energy-bar energy-bar--3" x="4" y="-40" width="8" height="20" rx="2"
              fill="var(--color-accent-primary)" opacity="0.7" />
        <rect class="energy-bar energy-bar--4" x="16" y="-40" width="8" height="20" rx="2"
              fill="var(--color-accent-primary)" opacity="0.5" />
      </g>

      <!-- Central rotating mechanism -->
      <g class="hub-gear" transform="translate(0, 20)">
        <circle cx="0" cy="0" r="25" fill="url(#brassGradient)" filter="url(#gearGlow)" />
        <circle cx="0" cy="0" r="18" fill="var(--color-bg-secondary)" />
        <circle cx="0" cy="0" r="12" fill="url(#gearCenter)" />
        <!-- Spinning indicator -->
        <g class="hub-spinner">
          <line x1="0" y1="-18" x2="0" y2="-10" stroke="var(--color-accent-highlight)" stroke-width="2" />
          <line x1="0" y1="10" x2="0" y2="18" stroke="var(--color-accent-highlight)" stroke-width="2" />
          <line x1="-18" y1="0" x2="-10" y2="0" stroke="var(--color-accent-highlight)" stroke-width="2" />
          <line x1="10" y1="0" x2="18" y2="0" stroke="var(--color-accent-highlight)" stroke-width="2" />
        </g>
      </g>

      <!-- Decorative rivets -->
      <g fill="var(--color-accent-tertiary)">
        <circle cx="-32" cy="-52" r="3" />
        <circle cx="32" cy="-52" r="3" />
        <circle cx="-32" cy="52" r="3" />
        <circle cx="32" cy="52" r="3" />
      </g>
    </g>

    <!-- Steam pipes network -->
    <g class="pipes">
      <!-- Left side pipes -->
      <g class="pipe-segment pipe-segment--left">
        <path d="M200 140 L280 140 Q300 140 310 130 L310 100"
              fill="none" stroke="url(#pipeGradient)" stroke-width="12" stroke-linecap="round" />
        <path d="M200 140 L280 140 Q300 140 310 130 L310 100"
              fill="none" stroke="var(--color-bg-secondary)" stroke-width="6" stroke-linecap="round" opacity="0.3" />
        <!-- Pipe joint -->
        <circle cx="280" cy="140" r="8" fill="url(#brassGradient)" />
      </g>

      <!-- Right side pipes -->
      <g class="pipe-segment pipe-segment--right">
        <path d="M390 120 L450 120 Q480 120 490 140 L520 140"
              fill="none" stroke="url(#pipeGradient)" stroke-width="12" stroke-linecap="round" />
        <path d="M390 120 L450 120 Q480 120 490 140 L520 140"
              fill="none" stroke="var(--color-bg-secondary)" stroke-width="6" stroke-linecap="round" opacity="0.3" />
        <circle cx="450" cy="120" r="8" fill="url(#brassGradient)" />

        <path d="M390 160 L430 160 Q450 160 460 180 L480 200"
              fill="none" stroke="url(#pipeGradient)" stroke-width="10" stroke-linecap="round" />
        <circle cx="430" cy="160" r="6" fill="url(#brassGradient)" />
      </g>

      <!-- Energy flow particles -->
      <g class="energy-particles">
        <circle class="particle particle--pipe-1" r="3" fill="var(--color-accent-secondary)" filter="url(#gearGlow)">
          <animateMotion dur="3s" repeatCount="indefinite"
                         path="M200,140 L280,140 Q300,140 310,130 L310,100" />
        </circle>
        <circle class="particle particle--pipe-2" r="3" fill="var(--color-accent-secondary)" filter="url(#gearGlow)">
          <animateMotion dur="2.5s" repeatCount="indefinite"
                         path="M390,120 L450,120 Q480,120 490,140 L520,140" />
        </circle>
      </g>
    </g>

    <!-- Kinetic pawpad path -->
    <g class="pawpad-path" transform="translate(0, 240)">
      <!-- Path base -->
      <rect x="50" y="0" width="600" height="25" rx="5" fill="url(#bronzeGradient)" opacity="0.8" />
      <rect x="55" y="5" width="590" height="15" rx="3" fill="var(--color-bg-secondary)" opacity="0.4" />

      <!-- Individual pawpads -->
      <g class="pawpads">
        <g class="pawpad pawpad--1" transform="translate(100, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--2" transform="translate(180, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--3" transform="translate(260, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--4" transform="translate(340, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--5" transform="translate(420, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--6" transform="translate(500, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
        <g class="pawpad pawpad--7" transform="translate(580, 12.5)">
          <ellipse cx="0" cy="0" rx="15" ry="10" fill="url(#copperGradient)" opacity="0.9" />
          <ellipse cx="0" cy="0" rx="10" ry="6" fill="var(--color-accent-secondary)" opacity="0.3" class="pawpad-glow" />
        </g>
      </g>

      <!-- Energy flowing through path -->
      <rect class="path-energy" x="55" y="8" width="100" height="9" rx="2"
            fill="url(#energyFlow)" opacity="0.6" />
    </g>

    <!-- Right side gear assembly -->
    <g class="gear-assembly gear-assembly--right" filter="url(#metalShine)">
      <!-- Main gear -->
      <g class="gear gear--right-main" transform="translate(580, 130)">
        <use href="#gearLarge" width="90" height="90" x="-45" y="-45" />
      </g>

      <!-- Supporting gears -->
      <g class="gear gear--right-1" transform="translate(630, 70)">
        <use href="#gearMedium" width="50" height="50" x="-25" y="-25" />
      </g>

      <g class="gear gear--right-2" transform="translate(520, 80)">
        <use href="#gearSmall" width="40" height="40" x="-20" y="-20" />
      </g>

      <g class="gear gear--right-3" transform="translate(650, 180)">
        <use href="#gearMedium" width="55" height="55" x="-27.5" y="-27.5" />
      </g>
    </g>

    <!-- Steam vents -->
    <g class="steam-vents">
      <g class="steam-vent steam-vent--1" transform="translate(310, 80)">
        <rect x="-5" y="0" width="10" height="15" rx="2" fill="url(#brassGradient)" />
        <g class="steam-cloud">
          <ellipse class="steam steam--1" cx="0" cy="-10" rx="8" ry="5"
                   fill="url(#steamGradient)" />
          <ellipse class="steam steam--2" cx="5" cy="-20" rx="10" ry="6"
                   fill="url(#steamGradient)" />
          <ellipse class="steam steam--3" cx="-3" cy="-32" rx="12" ry="7"
                   fill="url(#steamGradient)" />
        </g>
      </g>

      <g class="steam-vent steam-vent--2" transform="translate(485, 190)">
        <rect x="-4" y="0" width="8" height="12" rx="2" fill="url(#brassGradient)" />
        <g class="steam-cloud">
          <ellipse class="steam steam--1" cx="0" cy="-8" rx="6" ry="4"
                   fill="url(#steamGradient)" />
          <ellipse class="steam steam--2" cx="3" cy="-16" rx="8" ry="5"
                   fill="url(#steamGradient)" />
        </g>
      </g>
    </g>

    <!-- Sun-warm collector (solar panel cat style) -->
    <g class="sun-collector" transform="translate(250, 50)">
      <rect x="-50" y="-20" width="100" height="40" rx="4" fill="url(#copperGradient)" />
      <rect x="-45" y="-15" width="90" height="30" rx="3" fill="var(--color-accent-secondary)" opacity="0.4" />
      <!-- Collector segments -->
      <g fill="var(--color-accent-secondary)" opacity="0.6">
        <rect x="-40" y="-10" width="18" height="20" rx="2" class="collector-segment segment--1" />
        <rect x="-18" y="-10" width="18" height="20" rx="2" class="collector-segment segment--2" />
        <rect x="4" y="-10" width="18" height="20" rx="2" class="collector-segment segment--3" />
        <rect x="26" y="-10" width="18" height="20" rx="2" class="collector-segment segment--4" />
      </g>
      <!-- Label -->
      <text x="0" y="35" text-anchor="middle" fill="var(--color-text-tertiary)"
            font-family="var(--font-heading)" font-size="8" opacity="0.5">Sun-Warm Collector</text>
    </g>

    <!-- Whisker-static generator (wheel) -->
    <g class="whisker-generator" transform="translate(550, 45)">
      <ellipse cx="0" cy="0" rx="35" ry="20" fill="url(#bronzeGradient)" opacity="0.8" />
      <ellipse cx="0" cy="0" rx="28" ry="15" fill="var(--color-bg-secondary)" opacity="0.5" />
      <!-- Spokes -->
      <g class="generator-spokes" stroke="var(--color-accent-primary)" stroke-width="2">
        <line x1="-25" y1="0" x2="25" y2="0" />
        <line x1="0" y1="-12" x2="0" y2="12" />
        <line x1="-18" y1="-9" x2="18" y2="9" />
        <line x1="-18" y1="9" x2="18" y2="-9" />
      </g>
      <circle cx="0" cy="0" r="5" fill="url(#gearCenter)" />
      <!-- Label -->
      <text x="0" y="35" text-anchor="middle" fill="var(--color-text-tertiary)"
            font-family="var(--font-heading)" font-size="8" opacity="0.5">Whisker-Static</text>
    </g>

    <!-- Decorative cat paw prints walking across -->
    <g class="paw-prints" fill="var(--color-accent-tertiary)" opacity="0.15">
      <g transform="translate(150, 230)">
        <ellipse cx="0" cy="0" rx="6" ry="5" />
        <circle cx="-4" cy="-6" r="2" />
        <circle cx="0" cy="-7" r="2" />
        <circle cx="4" cy="-6" r="2" />
      </g>
      <g transform="translate(220, 225)">
        <ellipse cx="0" cy="0" rx="6" ry="5" />
        <circle cx="-4" cy="-6" r="2" />
        <circle cx="0" cy="-7" r="2" />
        <circle cx="4" cy="-6" r="2" />
      </g>
      <g transform="translate(290, 228)">
        <ellipse cx="0" cy="0" rx="6" ry="5" />
        <circle cx="-4" cy="-6" r="2" />
        <circle cx="0" cy="-7" r="2" />
        <circle cx="4" cy="-6" r="2" />
      </g>
    </g>
  </svg>
</div>

<style>
  .whiskerpunk-graphic {
    width: 100%;
    max-width: 800px;
    margin-inline: auto;
    border-radius: var(--radius-xl);
    overflow: hidden;
    background: linear-gradient(180deg,
      var(--color-bg-secondary) 0%,
      var(--color-bg-tertiary) 100%
    );
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-border);
  }

  .whiskerpunk-graphic__svg {
    display: block;
    width: 100%;
    height: auto;
    min-height: 150px;
  }

  /* Gear rotations - interlocking system */
  .gear--main {
    animation: gear-clockwise 20s linear infinite;
    transform-origin: center;
  }

  .gear--1 {
    animation: gear-counter 15s linear infinite;
    transform-origin: center;
  }

  .gear--2 {
    animation: gear-counter 15s linear infinite;
    transform-origin: center;
  }

  .gear--3 {
    animation: gear-counter 15s linear infinite;
    transform-origin: center;
  }

  .gear--small-1 {
    animation: gear-clockwise 10s linear infinite;
    transform-origin: center;
  }

  .gear--small-2 {
    animation: gear-clockwise 10s linear infinite;
    transform-origin: center;
  }

  .gear--right-main {
    animation: gear-counter 18s linear infinite;
    transform-origin: center;
  }

  .gear--right-1 {
    animation: gear-clockwise 12s linear infinite;
    transform-origin: center;
  }

  .gear--right-2 {
    animation: gear-counter 8s linear infinite;
    transform-origin: center;
  }

  .gear--right-3 {
    animation: gear-clockwise 14s linear infinite;
    transform-origin: center;
  }

  @keyframes gear-clockwise {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes gear-counter {
    from { transform: rotate(0deg); }
    to { transform: rotate(-360deg); }
  }

  /* Hub spinner */
  .hub-spinner {
    animation: gear-clockwise 4s linear infinite;
    transform-origin: center;
  }

  /* Energy bars pulsing */
  .energy-bar {
    animation: bar-pulse 2s ease-in-out infinite;
    transform-origin: bottom;
  }

  .energy-bar--1 { animation-delay: 0s; }
