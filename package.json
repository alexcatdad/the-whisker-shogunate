{
  "name": "the-whisker-shogunate",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit -p lore-server",
    "prepare": "lefthook install",
    "export-lore": "bun run scripts/export-lore.ts",
    "website:dev": "bun run export-lore && cd website && bun run dev",
    "website:build": "bun run export-lore && cd website && bun run build",
    "website:preview": "cd website && bun run preview"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "lefthook": "^1.6.0",
    "lint-staged": "^15.0.0"
  }
}
